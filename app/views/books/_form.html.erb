<div class="col-md-4 col-md-offset-4">
  <%= form_for(book) do |f| %>
    <% if book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
        <ul>
          <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".title" %></label>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".auth" %></label>
      <%= f.text_field :auth, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".zhanr" %></label>
      <%= f.text_field :zhanr, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".qty" %></label>
      <%= f.text_field :pages_qty, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".mini_description" %></label>
      <%= f.text_area :mini_description, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".description" %></label>
      <%= f.text_area :description, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".file_name" %></label><br>
      <%= f.text_field :name_of_file, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".language" %></label><br>
      <%= f.text_field :language, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".file_extension" %></label>
      <%= f.text_field :rozshirennya, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".image_url" %></label><br>
      <%= f.file_field :image_url, :class => "loader"%>
    </div><br>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".url_to_file" %></label><br>
      <%= f.file_field :url_to_book, :class => "loader" %>
    </div><br>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".downloaded_from" %></label><br>
      <%= f.text_field :origin_url_to_book, :class => "form-control" %>
    </div><br>
    <div class="actions">
      <% 
        submit = t ".submit" 
        back = t ".back"
      %>
      <%= f.button submit, class: "btn btn-default" %><%= link_to back, books_path, class: "btn btn-default pull-right" %>
    </div>
  <% end %>
</div>