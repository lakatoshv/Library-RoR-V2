<div class="col-md-4 col-md-offset-4 back">
<h1 class="col-md-6 col-md-offset-3 text-center"><%= t ".h1" %></h1><br>

<%= form_tag messages_path, method: :post do %>
  <%
    subject = t '.subject'
    message = t '.message'
    recipients = t '.recipients'
    send_to = t ".send"
  %>
  <br>
  <div class="form-group clear">
    <%= label_tag 'message[subject]', subject, class: "col-xs-2 control-label" %>
    <%= text_field_tag 'message[subject]', nil, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag 'message[body]', message, class: "col-xs-2 control-label" %>
    <%= text_area_tag 'message[body]', nil, cols: 3, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag 'recipients', recipients, class: "col-xs-2 control-label" %>
    <%= select_tag 'recipients', recipients_options, multiple: true, class: 'form-control chosen-it' %>
  </div>
  <%= submit_tag send_to, class: 'btn btn-default btn-primary btn-block button-background' %>
<% end %>