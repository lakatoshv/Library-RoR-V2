      :unlock => "Разблокировать мою учетную запись"
    } 
  end 
%>
<p><%= text[:p1] %> <%= @resource.email %>!</p>

<p><%= text[:p2] %></p>

<p><%= text[:p3] %></p>

<p><%= link_to text[:unlock], unlock_url(@resource, unlock_token: @token) %></p>
