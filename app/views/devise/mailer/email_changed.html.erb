<h2 class="col-md-6 col-md-offset-3 text-center back "><%= t ".p" %> <%= @email %>!</h2>
<div  class="col-md-4 col-md-offset-4 back text-center show_h2_content">
	<p><%= t ".p1" %></p>
	<% if @resource.try(:unconfirmed_email?) %>
	  	<p><%= t".p2" %> <%= @resource.unconfirmed_email %>.</p>
	<% else %>
  		<p><%= t ".p3" %> <%= @resource.email %>.</p>
	<% end %>
</div>