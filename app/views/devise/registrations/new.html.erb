<h2 class="col-md-6 col-md-offset-3 text-center back"><%= t ".h2" %></h2>
<div  class="col-md-4 col-md-offset-4 back text-center show_h2_content">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <label><%= t ".email" %></label><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <label><%= t ".password" %></label><br/>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <label><%= t ".password_confirmation" %></label> <br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <input type="submit" name="submit" value=<%= t ".submit" %>>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>