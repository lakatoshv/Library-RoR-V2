<div class="prof masthead d-flex">
  <div class="container my-auto">
    <div class="row">
      <center>
        <div class="col-md-10 col-sm-6 col-xs-6 mx-auto body-background center-block text-center">
          <h2 class="text-white text-center bounceInRight wow">
            <strong><%= t ".h2" %></strong>
          </h2>
          <p id="notice"><%= notice %></p> 
          <div class="row">
            <div class="versions" >
              
              <div class="clearfix"></div>
              <div class="omb_login">
                <center><img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" /></center><br/>
                <div class="row omb_row-sm-offset-3 omb_socialButtons">
                  <%= render "devise/shared/links" %>
                </div>
                <div class="row omb_row-sm-offset-3 omb_loginOr">
                  <div class="col-xs-12 col-sm-6">
                    <hr class="omb_hrOr">
                    <span class="omb_spanOr">або</span>
                  </div>
                </div>


                <%= form_for(resource, :class => "omb_loginForm", as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="row omb_row-sm-offset-3">
                  <%= devise_error_messages! %>
                  <div class="col-xs-12 col-sm-6">  
                      <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <%= f.email_field :email, :class => "form-control", autofocus: true %>
                      </div>
                      <span class="help-block"></span>              
                      <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
                      </div>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "off" %>
                      </div>
                      <button class="btn btn-lg btn-primary btn-block" name="submit" type="submit"><%= t ".submit" %></button>
                  </div>
                </div>
                <div class="row omb_row-sm-offset-3">
                  <div class="col-xs-12 col-sm-3">
                    <% if devise_mapping.rememberable? -%>
                      <label class="checkbox">
                        <%= f.check_box :remember_me %>
                        <%= t ".remember" %>
                      </label>
                    <% end %>
                  </div>
                  <div class="col-xs-12 col-sm-3">
                    <p class="omb_forgotPwd">
                      <a href="#">Забули пароль?</a>
                    </p>
                  </div>
                </div>        
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </center>
    </div>
  </div>
</div> 