<p id="notice"><%= notice %></p>
<div class="text-center back">
  <h1 class="col-md-6 col-md-offset-3"><%= t ".h1" %></h1></br>
  <h2 class="col-md-6 col-md-offset-3 back"><%= @title %></h2></br>
  <%= link_to t ".new", new_kritic_path %>
</div>
<div class="container">
  <div class="row">
    <% @vidguks.each do |vidguk| %>
      <div class="col-lg-3">
        <div class="box">
          <div class="box-gray aligncenter">
            <h3><%= link_to vidguk.name, vidguk, :class => "product" %></h3>
            <h4><a href="/books?utf8=✓&search=<%= vidguk.title_book %>&commit=Пошук" class="product"><%= vidguk.title_book %></a></h4>
            <div class="icon">
              
              <i class="fa fa-desktop fa-3x"></i>
            </div>
            <p>
              <%= vidguk.date %><br>
              <%
                delete = t ".delete"
                edit = t ".edit"
              %>
              <%= link_to delete, vidguk, method: :delete, data: { confirm: t ".question" } %> | <%= link_to t ".edit", edit_vidguk_path(vidguk) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>