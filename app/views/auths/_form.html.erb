<div class="col-md-4 col-md-offset-4">
  <%= form_for(auth) do |f| %>
    <% if auth.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(auth.errors.count, "error") %> prohibited this auth from being saved:</h2>
        <ul>
          <% auth.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".auth" %></label>
      <%= f.text_field :auth, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".book" %></label>
      <%= f.text_field :book, :class => "form-control" %>
    </div>
    <div class="form-group">
      <label class="col-xs-2 control-label"><%= t ".biography" %></label>
      <%= f.text_area :biography, :class => "form-control" %>
    </div>
    <div class="actions">
      <% 
        submit = t ".submit" 
        back = t ".back"
      %>
      <%= f.button submit, class: "btn btn-default" %><%= link_to back, auths_path, class: "btn btn-default pull-right" %>
    </div>
  <% end %>
</div>